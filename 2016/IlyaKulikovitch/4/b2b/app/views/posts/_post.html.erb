<article class="post">
 <section class="post-head">
  	 <small>
 	  <time><%= post.created_at.to_date.strftime("%d %B %Y") %> </time>
      |
      <%= link_to 'Изменить', edit_post_path(post) %>
      |
      <%= link_to 'Удалить', post_path(post), method: :delete, data: {confirm: 'Уверены?'} %>
 	 </small>
  <h2><% if post.exchange == 1 %> 
        Продажа
         <% else %>
       Покупка
        <% end %>
 	 	<%= link_to post.title, post_path(post) %></h2>

 </section>
  <section class="post-cotacts">
  	<strong>Контактные данные:</strong></br><%= post.cotacts %>
 </section>
</article>	

