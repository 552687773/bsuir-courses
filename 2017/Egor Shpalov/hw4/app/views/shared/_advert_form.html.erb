<%= form_for(@advert) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<%= f.text_field :title,   placeholder: "Title..." %>
    <%= f.text_area  :content, placeholder: "Content..." %>
    <br>
    <h2><%= radio_button_tag(:trade, "sell", default: true) %> I want to SELL bitcoins/bonsticks</h2>
	<h2><%= radio_button_tag(:trade, "buy") %> I want to BUY bitcoins/bonsticks</h2>
  </div>
  <%= f.submit "Create new adverticement", class: "btn bitbutton" %>
<% end %>
