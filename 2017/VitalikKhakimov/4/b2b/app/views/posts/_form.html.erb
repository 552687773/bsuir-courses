<%= form_for @post do |f| %>
  <div class="form-group">
  	<%= f.label :title %>
  	<%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
  	<%= f.label :preview %>
  	<%= f.text_area :preview, class: 'form-control' %>
  </div>

  <div class="form-group">
  	<%= f.label :adt %>
  	<%= f.text_area :adt, class: 'form-control' %>
  </div>

  <div class="form-group">
  	<%= f.label :contacts %>
  	<%= f.text_area :contacts, class: 'form-control' %>
  </div>

  <div class="form-group">
  	<%= f.submit 'Сохранить', class: 'btn btn-success' %>
  </div>
<% end %>

