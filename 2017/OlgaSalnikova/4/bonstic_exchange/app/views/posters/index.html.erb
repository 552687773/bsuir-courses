<div class="row">
  <div class="col-lg-9">
    <h2 class="poster-header"><%= t('page_headers.show_poster')%></h2>
  </div>

  <div class="col-lg-3 text-right">
    <%= link_to 'Разместить объявление', new_poster_path, class: 'btn btn-success' %>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped">
      <tbody>
      <% @posters.each do |poster| %>
          <tr>
            <td>
              <%= link_to poster.title, poster, class: 'poster-link' %>
            </td>
            <td>
              <%=time_ago_in_words(poster.created_at)%>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <p class = "bg-success"><%= paginate @posters, theme: 'twitter-bootstrap-3' %></p>
  </div>
</div>





