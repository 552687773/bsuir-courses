<table class="table table-striped">
  <thead>
    <tr>
      <th>Все объявления</th>
    </tr>
   </thead>
   <tbody>
     <% @posts.each do |post| %>
     <tr>
       <td><%= link_to post.title, post_path(post), style: 'color: #000000;'%></td>
       <td><%= "#{post.kind} #{post.item}" %></td>
     </tr>
     <% end %>
   </tbody>
</table>
<div class="apple_pagination">
  <%= will_paginate @posts %>
</div>
