<!-- Page Content -->
<div class="container">

<div class="row">

    <!-- Blog Post Content Column -->
    <div class="col-lg-8">

        <!-- Blog Post -->

        <!-- Title -->
        <h1>
          <%= @sell_post.title %>
          <small> Sell <%= @sell_post.sell_currency %> </small>
        </h1>
        <!-- Author -->
        <p class="lead">
            by <a href="#"><%= @sell_post.name %></a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> Posted on <%= @sell_post.created_at %></p>

        <hr>

        <!-- Post Content -->
        <p class="lead"><%= @sell_post.body %></p>

        <hr>

        <hr>


    </div>

    <!-- Blog Sidebar Widgets Column -->
    <%= render 'layouts/currencies_cost_bar' %>
</div>
<!-- /.row -->

<hr>

