<p id="notice"><%= notice %></p>

<p>
  <strong>Headline:</strong>
  <%= @article.headline %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<p>
  <strong>Data:</strong>
  <%= @article.data %>
</p>

<p>
  <strong>Count:</strong>
  <%= @article.count %>
  <%= @article.station %>
</p>

<h4>Comments</h4>
<% @article.comments.each do |comment| %>
  <p>
    <%= comment.ctext %>
    <br>
    <%= comment.cdata %>
  </p>
  <strong>----------------------</strong>
<% end %>

<h4>Add a comment:</h4>
<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label :ctext %><br>
    <%= form.text_area :ctext %>
  </p>
  <p>
    <%= form.label :cdata %><br>
    <%= form.text_field :cdata %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %> |
<%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' } %>
